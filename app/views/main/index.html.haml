- cache [@ur.abertas.count,@atu_ur.data, @atu_pu.data] do
  .container
    .row
      .col-sm-12.col-md-12.col-lg-9
        .mapa
          = render partial: 'mapa'
      .col-sm-12.col-md-6.col-lg-3
        .panel.panel-default
          .panel-heading
            %img{ :src => "#{asset_path 'ur.png'}" }
            %span.panel-title User Requests (UR)
          %table.table
            %tbody
              %tr
                %td= t('ur-without-comments')
                %td.text-right= @ur.abertas.sem_comentarios.count
              %tr
                %td= t('ur-with-answer')
                %td.text-right= @ur.abertas.com_resposta.count
              %tr
                %td= t('ur-awaiting-answer')
                %td.text-right= @ur.abertas.sem_resposta.count
            %tfoot
              %tr
                %th.text-right= t('ur-total')
                %th.text-right= @ur.abertas.count
        .panel.panel-default
          .panel-heading
            %img{ :src => "#{asset_path 'mp.png'}" }
            %span.panel-title Map Problems (MP)
          %table.table
            %tbody
              %tr
                %td
                  %a{:href => '/mps'} Abertas
                %td.text-right= @mp.abertas.count
            %tfoot
              %tr
                %th.text-right= t('mp-total')
                %th.text-right= @mp.count
        .panel.panel-default
          .panel-heading
            %img{ :src => "#{asset_path 'pu.png'}" }
            %span.panel-title Place Updates (PU)
          %table.table
            %tbody
              %tr
                %td
                  %a{:href => '/pendentes'} Pendentes
                %td.text-right= @pu.editaveis.count
              %tr
                %td
                  %a{:href => '/staff'} Bloqueados (staff)
                %td.text-right= @pu.bloqueados.count
            %tfoot
              %tr
                %th.text-right Total
                %th.text-right= @pu.count
